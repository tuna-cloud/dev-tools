<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tuna.tools.utils.JsonController">
   <children>
      <VBox prefHeight="243.5" prefWidth="1105.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox>
               <children>
                  <TextArea fx:id="rawTextArea" maxHeight="100.0" minHeight="100.0" promptText="需要格式化的Json" HBox.hgrow="ALWAYS" />
                  <Button id="prettyButton" maxWidth="100.0" minHeight="100.0" mnemonicParsing="false" onMouseClicked="#onClick" prefHeight="100.0" text="格式化" HBox.hgrow="NEVER" />
               </children>
            </HBox>
            <Separator prefWidth="200.0" />
            <HBox prefWidth="200.0">
               <children>
                  <TextField fx:id="keyWordTextField" promptText="key word" HBox.hgrow="ALWAYS" />
                  <Button mnemonicParsing="false" onMouseClicked="#onSearchClick" text="查    询" />
               </children>
            </HBox>
            <Separator prefWidth="200.0" />
            <TextArea fx:id="prettyTextArea" promptText="结果" VBox.vgrow="ALWAYS" />
            <Separator prefWidth="200.0" />
         </children>
      </VBox>
   </children>
</AnchorPane>
